<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/publish_main_activity_parent_layout_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_publish_main_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wenzhang" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_publish_main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_publish_main_content"
                android:layout_marginLeft="@dimen/publish_main_activity_edittext_left_margin"
                android:layout_toEndOf="@id/iv_publish_main_content"
                android:hint="写点什么吧。"
                android:textColor="@color/black"
                android:textSize="@dimen/publish_main_activity_edittext_textsize"
                app:met_clearButton="true"
                app:met_primaryColor="#a9b7b7"
                app:met_textColorHint="#56abe4"
                tools:text="@string/preview" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/publish_main_activity_item_margin_top">

            <ImageView
                android:id="@+id/iv_publish_main_location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weizhi" />

            <TextView
                android:id="@+id/tv_publish_main_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_publish_main_location_icon"
                android:layout_alignTop="@id/iv_publish_main_location_icon"
                android:layout_marginLeft="@dimen/publish_main_activity_edittext_left_margin"
                android:layout_toEndOf="@id/iv_publish_main_location_icon"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/publish_main_activity_textview_textsize"
                tools:text="@string/preview" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/publish_main_activity_item_margin_top"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_publish_main_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/publish_time" />

            <TextView
                android:id="@+id/tv_publish_main_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_publish_main_time"
                android:layout_alignTop="@id/iv_publish_main_time"
                android:layout_marginLeft="@dimen/publish_main_activity_edittext_left_margin"
                android:layout_toEndOf="@id/iv_publish_main_time"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/publish_main_activity_textview_textsize"
                tools:text="@string/preview" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/publish_main_activity_item_margin_top">

            <ImageView
                android:id="@+id/iv_publish_main_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/picture" />

            <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
                android:id="@+id/snpl_publish_main_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/publish_main_activity_edittext_left_margin"
                android:layout_toEndOf="@id/iv_publish_main_picture"
                app:bga_snpl_placeholderDrawable="@mipmap/bga_pp_ic_holder_dark">

            </cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
