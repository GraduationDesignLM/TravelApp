<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- 公共ActionBar ImageView样式 -->
    <style name="app_common_actionbar_imageStyle">
        <item name="android:clickable">true</item>
    </style>
    <!-- 公共ActionBar Text样式 -->
    <style name="app_common_actionbar_textStyle">
        <item name="android:textSize">@dimen/app_common_actionbar_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- 编辑框公共样式 -->
    <style name="input_style">
        <item name="android:background">@drawable/app_common_et_bg</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 输入用户名EditText样式 -->
    <style name="input_username_style" parent="@style/input_style">
        <item name="android:hint">@string/username</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">10</item>
    </style>
    <!-- 输入手机号EditText样式 -->
    <style name="input_phone_style" parent="@style/input_style">
        <item name="android:hint">@string/phone</item>
        <item name="android:inputType">phone</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">15</item>
    </style>
    <!-- 输入密码EditText样式 -->
    <style name="input_password_style" parent="@style/input_style">
        <item name="android:hint">@string/password</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
    </style>
    <!-- 输入验证码EditText样式 -->
    <style name="input_validatecode_style" parent="@style/input_style">
        <item name="android:hint">@string/vertify_code</item>
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">6</item>
    </style>
    <!-- 按钮公共样式 -->
    <style name="button_style">
        <item name="android:background">@drawable/app_common_button_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 提示TextView公共样式 -->
    <style name="tip_style">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
